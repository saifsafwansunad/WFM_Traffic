<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="7dp"
    android:orientation="vertical"
    android:padding="10dp"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="6dp"
    card_view:contentPadding="7dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/msg_imgview"
            android:layout_width="75dp"
            android:layout_gravity="center_vertical"
            android:layout_height="75dp"
            android:src="@drawable/profile" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/msgname_txtview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jonathan"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/msgcity_txtview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="San Francisco, California, USA"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/msgjob_txtview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Software Engineer at"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/msgcompany_txtview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Some Company"
                android:textColor="@color/black" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/messages_munu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_baseline_more_vert_24" />
        </RelativeLayout>


    </LinearLayout>


