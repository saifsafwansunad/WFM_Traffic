<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <include layout="@layout/custom_toolbar2"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"

                android:text="TRAFFIC SECTION"
                android:textColor="@color/black"
                android:textSize="24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"

                android:text="COM FORM 09"
                android:textColor="@color/black"
                android:textSize="18dp" />


            <TableLayout
               android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow
                    android:layout_marginTop="5dp">
                    <TextView
                        android:padding="5dp"
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:text="Employee : "
                        android:textColor="@color/black"
                        />

                    <TextView
                        android:padding="5dp"
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:text="Gavin Joyce"
                        android:textColor="@color/black"
                        />
                </TableRow>

                <TableRow android:layout_marginTop="5dp">

                    <TextView
                        android:padding="5dp"
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:text="Date : "
                        android:textColor="@color/black"
                        />

                    <TextView
                        android:padding="5dp"
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:text="2011/04/25"
                        android:textColor="@color/black"/>
                </TableRow>

                <TableRow android:layout_marginTop="5dp">

                    <TextView
                        android:padding="5dp"
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:text="Start Time : "
                        android:textColor="@color/black"
                        />

                    <TextView
                        android:padding="5dp"
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:text="09:30"
                        android:textColor="@color/black"
                        />
                </TableRow>

                <TableRow android:layout_marginTop="5dp">

                    <TextView
                        android:padding="5dp"
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:text="End Time : "
                        android:textColor="@color/black"
                        />

                    <TextView
                        android:padding="5dp"
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:text="21:40"
                        android:textColor="@color/black"
                        />

                </TableRow>

                <TableRow android:layout_marginTop="5dp">

                    <TextView
                        android:padding="5dp"
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:text="Normal Hours : "
                        android:textColor="@color/black"
                        />

                    <TextView
                        android:padding="5dp"
                        android:id="@+id/textView10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:text="08:00"
                        android:textColor="@color/black"
                        />

                </TableRow>

                <TableRow android:layout_marginTop="5dp">

                    <TextView
                        android:padding="5dp"
                        android:id="@+id/textView11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:text="Over Time Hours : "
                        android:textColor="@color/black"
                        />

                    <TextView
                        android:padding="5dp"
                        android:id="@+id/textView12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:text="04:30"

                        android:textColor="@color/black"
                        />

                </TableRow>



            </TableLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vehicle Registration :"
                    android:textColor="@color/black"
                    android:textSize="20dp"/>
                <EditText
                    android:id="@+id/report_subject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:background="@drawable/rectange_background"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Km for the day :"
                    android:textColor="@color/black"
                    android:textSize="20dp"/>
                <EditText
                    android:id="@+id/report_subject3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:background="@drawable/rectange_background"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Daily tasks as indicated on daily program :"
                    android:textColor="@color/black"
                    android:textSize="20dp"/>
                <EditText
                    android:id="@+id/report_subject1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:background="@drawable/rectange_background"
                    />
            </LinearLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="4"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TableRow
                    android:background="#0000cd"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.8"
                        android:gravity="center"
                        android:text="Time"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <TextView

                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="DESCRIPTION OF"

                        android:textColor="@color/white"
                        android:textStyle="bold" />




                </TableRow>

                <TableRow
                    android:background="#0000cd"
                    android:padding="5dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1.8"
                        android:weightSum="2"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="From"
                            android:textColor="@color/white"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="To"
                            android:textColor="@color/white"
                            android:textStyle="bold" />

                    </LinearLayout>



                    <TextView

                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="WORK DONE"

                        android:textColor="@color/white"
                        android:textStyle="bold" />




                </TableRow>

                <TableRow
                    android:background="#F0F0F0"
                    android:padding="5dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1.8"
                        android:weightSum="2"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="09:30"
                             />

                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="11:30"
                             />

                    </LinearLayout>



                    <TextView

                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"

                        android:text="Patrol duty : The movement or number of automobiles along a street"
                        />
                </TableRow>

                <TableRow
                    android:background="#ffffff"
                    android:padding="5dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1.8"
                        android:weightSum="2"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="09:30"
                            />

                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="11:30"
                            />

                    </LinearLayout>



                    <TextView

                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"

                        android:text="Traffic Act contraventions : The passage of people or vehicles along routes of transportation."
                        />
                </TableRow>

                <TableRow
                    android:background="#F0F0F0"
                    android:padding="5dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1.8"
                        android:weightSum="2"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="09:30"
                            />

                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="11:30"
                            />

                    </LinearLayout>



                    <TextView

                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"

                        android:text="Abnormal escort a delay that involves transportation or movement through a designated location."
                        />
                </TableRow>

                <TableRow
                    android:background="#ffffff"
                    android:padding="5dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1.8"
                        android:weightSum="2"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="09:30"
                            />

                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="11:30"
                            />

                    </LinearLayout>



                    <TextView

                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"

                        android:text="Traffic Act contraventions : To exchange in traffic; to effect by a bargain or for a consideration"
                        />
                </TableRow>

                <TableRow
                    android:background="#F0F0F0"
                    android:padding="5dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1.8"
                        android:weightSum="2"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="09:30"
                            />

                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="11:30"
                            />

                    </LinearLayout>



                    <TextView

                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"

                        android:text="Patrol duty : Illegal or improper commercial activity."
                        />
                </TableRow>
            </TableLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"

                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reason for deviation on duty for the day and place of duty :"
                    android:textColor="@color/black"
                    android:textSize="20dp"/>
                <EditText
                    android:id="@+id/report_message"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:gravity="top"
                    android:padding="5dp"
                    android:background="@drawable/rectange_background"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"

                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Comments : Supervisor"
                    android:textColor="@color/black"
                    android:textSize="20dp"/>
                <EditText
                    android:id="@+id/report_message1"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:gravity="top"
                    android:padding="5dp"
                    android:background="@drawable/rectange_background"
                    />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal">
                    <com.google.android.material.button.MaterialButton
                        android:layout_width="wrap_content"
                        android:layout_margin="5dp"
                        android:id="@+id/submit_btn"
                        android:backgroundTint="@color/purple_500"
                        android:layout_height="wrap_content"
                        android:text="Submit" />

                    <com.google.android.material.button.MaterialButton
                        android:layout_width="wrap_content"
                        android:id="@+id/clear_btn"
                        android:text="Clear"
                        android:layout_margin="5dp"
                        android:backgroundTint="@color/purple_500"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>



    </androidx.core.widget.NestedScrollView>


</LinearLayout>